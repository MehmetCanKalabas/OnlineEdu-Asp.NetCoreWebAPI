@using OnlineEdu.WEBUI.DTOs.BlogDtos
@model CreateBlogDto

@{
    ViewData["Title"] = "Blog Oluşturma Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <form method="post">
        <label class="form-label mt-3">Blog Başlığı </label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
        <br />

        <label class="form-label mt-3">Blog İçeriği </label>
        <input type="text" asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
        <br />
        
        <label class="form-label mt-3">Resim </label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        <br />
        <button type="submit" class="btn btn-outline-primary w-100 mt-4">Kaydet</button>
    </form>
</div>
