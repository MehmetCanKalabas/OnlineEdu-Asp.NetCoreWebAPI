@using OnlineEdu.WEBUI.DTOs.CourseCategoryDtos
@model CreateCourseCategoryDtos
@{
    ViewData["Title"] = "Yeni Kurs Kategori Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <form method="post">
        <label>Kurs Kategori İsmi</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" rows="3" />
        <br />
        <label>Ana Sayfada Gösterilsin</label>
        <input type="checkbox" asp-for="IsShown" class="form-check" />
        <br />
        <button type="submit" class="btn btn-outline-primary">Kaydet</button>
    </form>
</div>
