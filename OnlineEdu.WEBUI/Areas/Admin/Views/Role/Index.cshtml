@using OnlineEdu.WEBUI.DTOs.RoleDtos
@model List<ResultRoleDto>

@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<div class="container mt-4">

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td>
                    <button onclick="deleteRole(@item.Id)" class="btn btn-outline-danger">Sil</button>
                </td>
            </tr>
        }
    </table>
    <br />
    <a asp-action="CreateRole" asp-controller="Role" asp-area="Admin" class="btn btn-outline-primary">Yeni Rol Ekle</a>
</div>

<script>

    function deleteRole(id) {

          Swal.fire({
          title: "Silmek istediğinize emin misiniz?",
          text: "Bu işlemi geriye alamazsınız!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Evet,Sil!",
          cancelButtonText: "İptal!"
        }).then((result) => {
          if (result.isConfirmed) {
          window.location.href = "/Admin/Role/DeleteRole/" + id;
            }
          });
      }
</script>

