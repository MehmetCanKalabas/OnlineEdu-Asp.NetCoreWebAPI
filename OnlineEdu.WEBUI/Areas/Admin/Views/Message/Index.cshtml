@using OnlineEdu.WEBUI.DTOs.MessageDtos
@model List<ResultMessageDto>

@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<div class="container mt-4">

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Gönderen Adı</th>
            <th>Gönderen Email</th>
            <th>Konu</th>

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>
                    <button onclick="deleteMessage(@item.MessageId)" class="btn btn-outline-danger">Sil</button>
                    <a asp-action="MessageDetail" asp-controller="Message" asp-area="Admin" asp-route-id="@item.MessageId" class="btn btn-outline-primary">Mesajı Aç</a>
                </td>
            </tr>
        }
    </table>
    <br />
</div>

<script>

    function deleteBlog(id) {

          Swal.fire({
          title: "Silmek istediğinize emin misiniz?",
          text: "Bu işlemi geriye alamazsınız!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Evet,Sil!",
          cancelButtonText: "İptal!"
        }).then((result) => {
          if (result.isConfirmed) {
          window.location.href = "/Admin/Message/DeleteMessage/" + id;
            }
          });
      }
</script>

